# End session
super + alt + Escape
	bspc quit ; killall bspwm_wrapper.sh

# Close windoq
super + q
	bspc window --close

# Next layout
super + space
	bspc desktop --layout next

# Balance desktop areas
super + b
	bspc desktop --balance

# Toggle floating/fullscreen
super + {s,f,t, p}
	bspc window --state {floating,fullscreen,tiled, pseudo_tiled}

# Go to last window or desktop (grave is `)
super + {grave,Tab}
	bspc {window,desktop} --focus last

# Swap with last window
super + apostrophe
	bspc window --swap last

# Navigate window history
super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} --focus; \
	bspc control --record-history on

# ????
super + y
	bspc window --to-window last.manual

# Swap with largest window
super + m
	bspc window --swap biggest

super + g
    xdotool search --onlyvisible --classname scratchpad windowunmap \
    || xdotool search --classname scratchpad windowmap \
    || urxvt-256color -name scratchpad -geometry 80x10 &

# Move focus and swap window bindings
super + {_,shift + }{h,j,k,l}
	bspc window --{focus,swap} {left,down,up,right}

# Focus next or previous window
super + {_,shift + }c
	bspc window --focus {next,prev}

# Rotate windows of current desktop
super + {comma,period}
	bspc desktop --circulate {backward,forward}

# Rotate "layout" of current desktop
super + shift + {comma,period}
	bspc desktop --rotate {270,90}

# Focus next or previous desktop
super + bracket{left,right}
	bspc desktop --focus {prev,next}

# Preselect
super + ctrl + {h,j,k,l}
	bspc window --presel {left,down,up,right}

# Clear preselection of current or all windows
super + ctrl + {_,shift + }space
	bspc {window --presel cancel,desktop --cancel-presel}

# Grow current window
super + alt + {h,j,k,l}
	bspc window --edge {left -10,down +10,up -10,right +10}


# Shrink current window
super + alt + shift + {h,j,k,l}
	bspc window --edge {right -10,up +10,down -10,left +10}

# Set split ratio of current window
super + ctrl + {1-9}
	bspc window --ratio 0.{1-9}

# Focus or move window to desktop number
super + {_,shift + }{1-9,0}
	bspc {desktop --focus,window --to-desktop} ^{1-9,10}

# Grab button 1 events
~button1
	bspc pointer --grab focus

# Move or resize windows
super + button{1-3}
	bspc pointer --grab {move,resize_side,resize_corner}

# Track pointer coordinates
super + !button{1-3}
	bspc pointer -t %i %i

# Ungrab pointer
super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt-256color -e tmux -2

super + shift + Return
	~/syncsettings/bin/rofi_tmux.sh -location 2

super + shift + w
	~/syncsettings/repos/nmcli-dmenu/nmcli_dmenu

# Adjust backlight intensity
XF86MonBrightness{Up,Down}
    xbacklight {-inc,-dec} 10

# Open command interface
super + d
	rofi -show run -location 2

# Open window selector interface
super + w
	rofi -show window -location 2

# make sxhkd reload its configuration files:
super + Escape
	killall sxhkd
