# End session
super + alt + Escape
	bspc quit ; killall bspwm_wrapper.sh

# Close window
super + w
	bspc window -c

# Next layout
super + space
	bspc desktop -l next

# Balance desktop areas
super + b
	bspc desktop -B

# Toggle floating/fullscreen
super + {s,f,t}
	bspc window -t {floating,fullscreen,tiled}

# Go to last window or desktop (grave is `)
super + {grave,Tab}
	bspc {window,desktop} -f last

# Swap with last window
super + apostrophe
	bspc window -s last

# Navigate window history
super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

# ????
super + y
	bspc window -w last.manual

# Swap with largest window
super + m
	bspc window -s biggest


super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt-256color -e tmux -2

super + shift + Return
	~/syncsettings/bin/rofi_tmux.sh

super + d
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
